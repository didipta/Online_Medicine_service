@model Online_Medicine_service.Models.Database.Models.Systemuser
@{
    ViewBag.Title = "Profilepage";
    Layout = "~/Views/Shared/_Userlayout.cshtml";
}
<div class="heading_p_page">
    <span>
        <a href="/User/Homepage">Home </a><a href="#">/ @Model.U_name</a>
    </span>
</div><br />


    <section id="profile-info">

        <div class="img">

            <img src="~/Content/img/@Model.U_profileimg" alt="">

            <label class="Add-file" onclick="myFunction()"><i class="fa fa-camera" aria-hidden="true"></i></i></label>
        </div>

        <form action="" method="Post" class="profile-form">


            <input type="hidden" name="id" value="">
            <fieldset>
                <legend><p>Username</p></legend>
                <div class="input-file">
                    <input type="text" id="name" value="@Model.U_name" name="name" placeholder="username"><br>
                </div>

            </fieldset>

            <span class="error" style="position:absolute; top:74%;"></span>

            <fieldset>
                <legend><p>Address</p></legend>
                <div class="input-file">
                    <input type="text" id="address" value="@Model.U_address" name="address" placeholder="Address"><br>
                </div>

            </fieldset>

            <span class="error" style="position:absolute; top:74%;"></span>

            <fieldset>
                <legend><p>Email</p></legend>
                <div class="input-file">
                    <input type="text" id="U_email" value="@Model.U_email" name="U_email" placeholder="Email" readonly><br>
                </div>

            </fieldset>

            <fieldset>
                <legend><p>User Name</p></legend>
                <div class="input-file">
                    <input type="text" id="U_username" value="@Model.U_username" name="U_username" placeholder="User Id" readonly><br>
                </div>

            </fieldset>

            <fieldset>
                <legend><p>Phone Number</p></legend>
                <div class="input-file">
                    <input type="text" id="U_phone" value="@Model.U_phone" name="U_phone" placeholder="Phone Number" readonly><br>
                </div>

            </fieldset>


            <input type="submit" name="submit" value="Save" class="btn">


        </form>

    </section>

    <section id="Change-password">
        <div class="head">
            <h1>
                PASSWORD
            </h1>
        </div>
        <form action="" method="Post" class="Changepassword">

            <input type="hidden" name="id" value="">

            <div class="input-file-cp">
                <input type="password" id="password" name="thispassword" placeholder="Current password"><br>
                <div class="eye eyes" onclick=" password() " style=" position:absolute; left:14vw; top:7.5vw;  cursor: pointer;"><i class="fa fa-eye" aria-hidden="true"></i></div>
            </div>


            <div class="input-file-cp">
                <input type="password" id="cpassword" name="newpassword" placeholder="New password">
                <div class="eye eyes" onclick=" cpassword() " style=" position:absolute; left:14vw; top:12vw;  cursor: pointer;"><i class="fa fa-eye" aria-hidden="true"></i></div>
            </div>

            <span class="error" style="position:absolute; top:74%;"></span>

            <button class="btn">
                Save
            </button>

            <p>  </p>

        </form>




    </section>

    <div id="profileimg">
        <div onclick="myFunction2()"> <i class="fa fa-times" aria-hidden="true"></i></div>

        <form action="/User/Profileimg" method="Post" class="profile-form" enctype="multipart/form-data">

            
            <div class="img">

                <img src="~/Content/img/@Model.U_profileimg" alt="" id="blah">

                <label for="imgfile" class="Add-file"><i type="file" class="fa fa-plus" aria-hidden="true"></i></label>
                <div class="file-style"> <input type="file" name="" id="imgfile" onchange="document.getElementById('blah').src = window.URL.createObjectURL(this.files[0]); myfuction()"></div>
                <input type="hidden" name="Imgfile" id="Imgfiles">
                <span class="error" style=""></span>

                <br> <button class="btn">Save </button>
            </div>
        </form>

    </div>
</div>
<script>
    function myfuction() {
        var fullPath = document.getElementById('imgfile').value;
        if (fullPath) {
            var startIndex = (fullPath.indexOf('\\') >= 0 ? fullPath.lastIndexOf('\\') : fullPath.lastIndexOf('/'));
            var filename = fullPath.substring(startIndex);
            if (filename.indexOf('\\') === 0 || filename.indexOf('/') === 0) {
                filename = filename.substring(1);
            }
            document.getElementById("Imgfiles").value = filename;
        }
    }
</script>


