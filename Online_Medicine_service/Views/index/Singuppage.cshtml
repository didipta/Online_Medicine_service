@model Online_Medicine_service.Models.Database.Models.systemusermodel
@{
    ViewBag.Title = "Singuppage";
    Layout = "~/Views/Shared/_indexlayout.cshtml";
}

<div class="sign-body">
    <form action="/index/Singuppage" method="POST" class="sign-up">
        <div class="regis-title">
            <h1>Registertion</h1>
            <div class="title-line"></div>
            <h3>This Will help you manage all your activities.</h3>
            <p>
                Let's get you set up you can verify your personal account and
                setting up your profile.
            </p>
        </div>
        <div class="sign-up-form">
            <div style="width:400px;">
                <div class="input-field">
                    <i class="fa fa-user"></i>
                    <input type="text" name="Firstname" id="First name" placeholder="First name" />
                </div>
                <span class="error" style="position:absolute; top:35%;"> @Html.ValidationMessageFor(model => model.Firstname)</span>

                <div class="input-field">
                    <i class="fa fa-phone" aria-hidden="true"></i>
                    <input type="tel" name="phone" id="phone" placeholder="Phone number"><br><span></span>
                </div>
                <span class="error" style="position:absolute; top:47%;">@Html.ValidationMessageFor(model => model.phone)</span>
                <div class="input-field">
                    <i class="fa fa-user-o" aria-hidden="true"></i>
                    <input type="text" name="username" id="username" placeholder="User name">
                </div>
                <span class="error" style="position:absolute; top:59%;">@Html.ValidationMessageFor(model => model.username)</span>
                <div class="input-field">
                    <i class="fa fa-lock"></i>
                    <input type="password" name="password" id="password" placeholder="Password" >
                    <div class="eye" onclick="  password() "><i class="fa fa-eye" aria-hidden="true" id="eye"></i></div>
                </div>

                <span class="error" style="position:absolute; top:71%;">@Html.ValidationMessageFor(model => model.password)</span>
            </div>


            <div style="margin-left: 20px; width:400px;">

                <div class="input-field">
                    <i class="fa fa-user"></i>
                    <input type="text" name="LastName" id="Lastname" placeholder="Last name" />
                </div>
                <span class="error" style="position:absolute; top:35%;">@Html.ValidationMessageFor(model => model.LastName)</span>
                <div class="input-field">
                    <i class="fa fa-map-marker" aria-hidden="true"></i>
                    <input type="text" name="address" id="add" placeholder="Address">
                </div>
                <span class="error" style="position:absolute; top:47%;">@Html.ValidationMessageFor(model => model.address)</span>
                <div class="input-field">
                    <i class="fa fa-envelope"></i>
                    <input type="email" name="email" id="email" placeholder="Email">
                </div>

                <span class="error" style="position:absolute; top:59%;">@Html.ValidationMessageFor(model => model.email)</span>
                <div class="input-field">
                    <i class="fa fa-lock"></i>
                    <input type="password" name="cpassword" id="cpassword" placeholder="Confirm Password">
                    <div class="eye" onclick=" cpassword() "><i class="fa fa-eye" aria-hidden="true" id="ceye"></i></div>
                </div>
                <span class="error" style="position:absolute; top:71%;">@Html.ValidationMessageFor(model => model.cpassword)</span>
            </div>
        </div>
        <div class="checkbox-form">
            <input type="Checkbox" required /><span style="margin-top: -2px;"> I agree to all <a href="">Teams</a> , <a href="">Privacy policy</a> and <a href="">Fees</span></a>.
        </div>

        <input type="submit" id="submitreg" class="btn" value="Create Account" />


        <div class="singintext">
            <p>Already have an account?<a href="/index/singinpage"> Log-in</a></p>

        </div>
    </form>

</div>